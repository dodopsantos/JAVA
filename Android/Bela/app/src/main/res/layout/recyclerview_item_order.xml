<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/descriptionboxlogo"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/txtViewName"
                    android:layout_width="230dp"
                    android:layout_height="30dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="40dp"
                    android:text="Nome"/>
                <TextView
                    android:id="@+id/txtViewPrice"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="0dp"
                    android:text="R$: 10000,00"
                     />

            </RadioGroup>

            <TextView
                android:id="@+id/txtViewCNPJ"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="40dp"
                android:text="CNPJ" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:textAlignment="center">

            <TextView
                android:id="@+id/txtViewIE"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="40dp"
                android:text="IE" />

            </RadioGroup>
            <TextView
                android:id="@+id/txtViewAdress"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="40dp"
                android:text="Município" />
            <TextView
                android:id="@+id/txtViewCEP"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="40dp"
                android:text="CEP" />

            <TextView
                android:id="@+id/txtViewpPlace"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="40dp"
                android:text="Logradouro" />
            <TextView
                android:id="@+id/txtViewpProduct"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="40dp"
                android:text="Produto" />
            <TextView
                android:id="@+id/txtViewComission"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="40dp"
                android:text="Comissão" />

            <TextView
                android:id="@+id/txtViewInvoice"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="40dp"
                android:text="Nota fiscal" />

            <TextView
                android:id="@+id/txtViewPayType"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="40dp"
                android:text="Forma de pagamento" />

            <TextView
                android:id="@+id/txtViewPayForm"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="40dp"
                android:text="Prazo" />

            <TextView
                android:id="@+id/txtViewDescription"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="40dp"
                android:inputType="textMultiLine"
                android:text="Observações" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/txtViewpTime"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:inputType="datetime"
                    android:layout_marginLeft="40dp"
                    android:text="Data" />

                <TextView
                    android:id="@+id/txtViewStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:text="Status"
                    />
            </RadioGroup>


        </LinearLayout>
</LinearLayout>